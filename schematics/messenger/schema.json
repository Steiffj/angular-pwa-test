{
    "$schema": "http://json-schema.org/schema",
    "$id": "SchematicsMessengerService",
    "title": "Worker Messenger Schema",
    "type": "object",
    "properties": {
      "name": {
        "description": "The name of the messenger.",
        "type": "string"
      },
      "path": {
        "type": "string",
        "format": "path",
        "description": "The path to create the service.",
        "visible": false
      },
      "project": {
        "type": "string",
        "description": "The name of the project.",
        "$default": {
          "$source": "projectName"
        }
      }
     },
    "required": [
      "name"
    ]
  }